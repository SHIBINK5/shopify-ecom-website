<div class="container mt-5">
  <section>
    <div class=" container row d-flex justify-content-center">
      <div class="ml-5 col-md-6">
        <h2 class="text-center mt-5">Edit Product Details</h2>
        
        <form action="/admin/edit-products/{{updatepId._id}}" method="post" >
          {{!-- enctype kodthalee image file upload cheyyullu--}}
          
          <label for="">Product Name</label>
          <input type="text" name="name" class="form-control" value="{{updatepId.name}}">

          <label for="">Description</label>
          <input type="text" name="description" class="form-control" value="{{updatepId.description}}">


          <label for="">Price</label>
          <input type="Number" name="price" class="form-control" value="{{updatepId.price}}">

          <label for="">Image</label>

         <img src="/images/{{updatepId._id}}.jpg" alt="" style="width: 200px;height:auto" id="imgView"> 
         <input type="file" name="image" class="form-control" onchange="viewImage(event)"> 

          {{!-- <input type="file" name="image" class="form-control" onchange="viewImage(event)"> --}}

          <div class="form-floating mb-3 mt-3">
            <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="category">
              <option selected>Select category</option>
              {{#each catDetail}}
              <option value="{{this.Name}}">{{this.Name}}</option>
              {{!-- <option value="2">Two</option>
              <option value="3">Three</option> --}}
              {{/each}}
            </select>          
          </div>
          <button type="submit" class="btn btn-success mt-4">Submit</button>

        </form>
       
      </div>
    </div>
  </section>



</div>

<script>
  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>