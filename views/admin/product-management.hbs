<div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Bordered table</h4>
                    <p class="card-description"> Available users </code>
                    </p>
                     <a class="btn btn-info float-right mb-3" href="/admin/add-products" role="button">Add Product</a>
                    <div class="table-responsive">
                      <table style="border:2px solid black" class="table table-bordered ">
                        <thead>
                          <tr>
                            <th> Sl No </th>
                            <th> Product name </th>
                            <th> Description </th>
                            <th> Category</th>
                            <th> Price </th>
                            <th> Image </th>
                            <th> Edit/Delete </th>
                          </tr>
                        </thead>
                        <tbody>

                            {{#each productDetails}}
                            <tr>
                                 <td>{{inc @index}}</td>
                                <td>{{this.name}}</td>
                                <td>{{this.description}}</td>
                                 <td>{{this.category}}</td>
                                 <td>{{this.price}}</td>
                                  <td><img src="/images/{{this.image.[0]}}" style="width: 80px; ;size:80px" alt=""></td>
                                {{!-- <td>{{this.number}}</td> --}}
                               
                                 {{!-- {{#if block}} --}}
                                 <td>
                                                                  
                              {{!-- {{else}} --}}
                     
                                    <a class="btn btn-primary" href="/admin/edit-products/{{this._id}}" >Edit</a>  
                                     {{!-- <a class="btn btn-danger" href="/admin/unblock/{{this._id}}">Delete</a>     --}}
                                     <a class="btn btn-danger ml-15 float-center" href="/admin/pdelete/{{this._id}}" >Delete</a>     
                                </td>
                                {{!-- {{/if}} --}}
                               
                               
                            </tr>
                            {{/each}}
                         
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>


