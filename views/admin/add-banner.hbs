<div class="container mt-5">
  <section>
    <div class=" container row d-flex justify-content-center">
      <div class="ml-5 col-md-6">
        <h2 class="text-center mt-5">Add Banner</h2>
        <form action="/admin/add-banner/{{updatebId._id}}" method="post" enctype="multipart/form-data">
          {{!-- enctype kodthalee image file upload cheyyullu--}}

          <label for="">Heading</label>
          <input type="text" value="{{updatebId.heading}}"   name="heading" class="form-control">

          <label for=""> Title</label>
          <input type="text" value="{{updatebId.title}}"  name="title" class="form-control">


          <label for="">Description</label>
          <input type="text" value="{{updatebId.description}}"  name="description" class="form-control">

          <label for="">Image</label>
           <img src="/images/{{updatebId._id}}.jpg" alt="" style="width: 200px;height:auto" id="imgView"> 
          <input type="file" value="{{updatebId.image}}"  name="image" class="form-control" onchange="viewImage(event)">

          

          <div class="form-floating mb-3 mt-3">
            {{!-- <select class="form-select" id="floatingSelect" aria-label="Floating label select example" name="category"> --}}
              {{!-- <option selected>Select category</option> --}}
             
              {{!-- <option value="2">Two</option>
              <option value="3">Three</option> --}}
             
            {{!-- </select> --}}
            {{!-- <label for="floatingSelect">Category</label> --}}
          </div>
          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </section>
</div>

<script>
  function viewImage(event){
    document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
  }
</script>