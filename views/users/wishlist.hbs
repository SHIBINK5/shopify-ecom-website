<script>

  function deleteWishProduct(cartId, proId) {
    console.log(cartId, proId)
    $.ajax({
      url: '/delete-wishproduct',
      data: {
        cart: cartId,
        product: proId,

      },

      method: 'post',
      success: (response) => {

        if (response) {
          alert("delete")
