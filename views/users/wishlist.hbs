          // $("#myDiv").Load(Location.href + " #mydiv>*","");
          $("#mydiv").load(location.href + " #mydiv");

          location.reload();
        } else {
          $("#mydiv").load(location.href + " #mydiv");

        }

      }

    })
  }

</script>



<script>

function addToCart(ProId){
    $.ajax({
        url:'/add-to-cart/'+ProId,
        method:'get',
        success:(response)=>{
            if(response.status){
                Swal.fire({
                    icon:'success',
                    title:'Added to Cart',
                    showConfirmButton: false,
                    timer:1500
                })
                let count=$('#wish-count').html()
                count=parseInt(count)+1
                $("#wish-count").html(count)
            }
        }
    })
}

</script>